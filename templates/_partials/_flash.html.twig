{% for message in app.flashes('success') %}
	<div id="alert-3" class="message flex w-full bg-green-100 gap-6 rounded-lg overflow-hidden divide-x  dark:bg-gray-50 dark:text-gray-800 dark:divide-gray-300 mb-4">
		<div class="flex flex-1 flex-col p-4 dark:border-violet-600">
			<span class="text-2xl text-green-600">Info</span>
			<span class="italic text-green-950 dark:text-gray-600">
				{{ message }}
			</span>
		</div>
		<button class="px-4 font-bold bg-green-300 text-green-600 flex items-center text-xs uppercase tracking-wide dark:text-gray-600 dark:border-gray-300" data-dismiss-target="#alert-3">Effacer</button>
	</div>
{% endfor %}

{% for message in app.flashes('alert') %}
	<div id="alert-4" class="message flex w-full bg-red-100 gap-6 rounded-lg overflow-hidden divide-x  dark:bg-gray-50 dark:text-gray-800 dark:divide-gray-300 mb-4">
		<div class="flex flex-1 flex-col p-4 dark:border-violet-600">
			<span class="text-2xl text-red-600">Info</span>
			<span class="italic text-red-950 dark:text-gray-600">
				{{ message }}
			</span>
		</div>
		<button class="px-4 font-bold bg-red-300 text-red-600 flex items-center text-xs uppercase tracking-wide dark:text-gray-600 dark:border-gray-300" data-dismiss-target="#alert-4">Effacer</button>
	</div>
{% endfor %}

{% for message in app.flashes('facebook') %}
	<div id="alert-4" class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
		<svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
			<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
		</svg>
		<div data-controller="accesstoken" class="flex justify-center items-center w-full">
			<div id="status" class="mr-5"></div>
			<fb:login-button data-size="large" config_id="942793607635684" target="_blank" class="custom_fb_button"></fb:login-button>

		</div>
		<button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-4" aria-label="Close">
			<span class="sr-only">Close</span>
			<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
				<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
			</svg>
		</button>
	</div>
{% endfor %}
