{% if formula.position > 1 %}
    <form method="post" action="{{ path('app_edit_formula_move', {'id': formula.id, 'direction': -1}) }}" onsubmit="return confirm('Voulez vous vraiment modifier l'ordre d'affichage ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('move' ~ formula.id) }}">
        <button type="submit" title="remonter d'un niveau" class="w-4 h-4"><svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 512 512"><path d="M233.4 105.4c12.5-12.5 32.8-12.5 45.3 0l192 192c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L256 173.3 86.6 342.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l192-192z"/></svg></button>
    </form>
    {% else %}
        <div class="w-4"></div>
    {% endif %}

{% if formula.position < project.formulas|length %}
    <form method="post" action="{{ path('app_edit_formula_move', {'id': formula.id, 'direction': 1}) }}" onsubmit="return confirm('Voulez vous vraiment modifier l'ordre d'affichage ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('move' ~ formula.id) }}">
        <button type="submit" title="descendre d'un niveau" class="w-4 h-4"><svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 512 512"><path d="M233.4 406.6c12.5 12.5 32.8 12.5 45.3 0l192-192c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L256 338.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l192 192z"/></svg></button>
    </form>
{% else %}
    <div class="w-4"></div>
{% endif %}