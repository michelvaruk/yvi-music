{% extends "admin/base.html.twig" %}

{% block title %}Message{% endblock %}

{% block body %}
<div class="p-4 border-2 border-gray-200 border-dashed rounded-lg">
    <section class="shadow-md sm:rounded-lg mb-5 p-5">
        <div class="px-4 sm:px-0 show-heading">
            <div class="show-title">
                <h1 class="text-base font-semibold leading-7 text-gray-900">Message</h1>
                <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Message de {{ contact.email }} reçu le {{ contact.createdAt|date("d/m/Y à H:i", "Europe/Paris") }}</p>
            </div>
            <div class="show-buttons">
                {{ include('admin/contact/_delete_form.html.twig', { className: 'font-medium text-red-600 dark:text-blue-500 hover:underline'}) }}
            </div>
        </div>
        <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">De :</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 underline"><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></dd>
                </div>
            </dl>
        </div>
        <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Reçu le :</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.createdAt|date("d/m/Y à H:i", "Europe/Paris") }}</dd>
                </div>
            </dl>
        </div>
        <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">De :</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.firstname ~ ' ' ~ contact.lastname }}</dd>
                </div>
            </dl>
        </div>
        <div class="mt-6 border-t border-gray-100">
            <dl class="divide-y divide-gray-100">
                <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm font-medium leading-6 text-gray-900">Message :</dt>
                    <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">{{ contact.content }}</dd>
                </div>
            </dl>
        </div>
        <a href="{{ path('app_edit_contact_index') }}" class="text-gray-900 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 inline-block mt-8">Retour</a>
    </section>
</div>
{% endblock %}