{% extends "base.html.twig" %}
{% block body %}
    {% include "_partials/_header.html.twig" with {
        'title': 'Gallerie',
        'subtitle': '>>> Ajouter un sous-titre pour cette page <<<'
    } %}
    <main id="main">
        <article class="yvi-container">
            <div class="gallery">
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    {% for gallery in galleries %}
                        <div>
                            <img class="h-auto max-w-full rounded-lg" src="{{ asset('images/' ~ gallery.pictureName) }}" alt="Photo de {{ gallery.project.title }}" data-project="{{ gallery.project.id }}">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </article>
    </main>

{% endblock %}