{% extends 'base.html.twig' %}

{% block title %}Mon nouveau mot de passe{% endblock %}

{% block body %}
    {% include "_partials/_header.html.twig" with {
        'title': 'Mon nouveau mot de passe',
        'subtitle': 'Enregistrez votre nouveau mot de passe avant de vous connecter.'
    } %}
    <main id="main">
        <article class="yvi-container">
            {% form_theme resetForm 'tailwind_2_layout.html.twig' %}
            {{ form_start(resetForm) }}
                {{ form_widget(resetForm) }}

                <button class="w-full font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-4">Enregistrer</button>
            {{ form_end(resetForm) }}
        </article>
    </main>
{% endblock %}
